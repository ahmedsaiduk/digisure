%p#notice= notice
.well.well-lg
  .row
    %h3.col-lg-8 Transactions
    %div.col-lg-2
    = link_to 'New Transaction', new_transaction_path, class: "btn btn-success btn-lg active col-lg-2"
    %h5.col-lg-8 
      = "Available Amount:  #{current_user.balance.total_amount}"

.container-fluid
  %table.table.table-hover
    %thead
      %tr
        %th Sender
        %th Receiver
        %th State
        %th Amount
        %th{:colspan => "3"}
    %tbody
      - @transactions.each do |transaction|
        %tr
          %td= transaction.user.email
          %td= transaction.transaction_with.email
          %td= transaction.transaction_state
          %td= transaction.amount
          %td= link_to 'Show', transaction
